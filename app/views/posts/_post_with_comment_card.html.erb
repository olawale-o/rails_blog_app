<li class="post__comment-item mb-2">
  <%= link_to user_post_path(@user_id, post) do %>
    <%= render partial: "post_card", locals: { post: post } %>
  <% end %>
  <ul class="comment__list">
    <% (1..3).each do |c| %>
      <li class="comment__item">
        <span class="comment__item-user"><%= "User #{c}" %>:  </span>
        <span class="comment__item-comment"><%= "Comment #{c}" %> </span>
      </li>
    <% end %>
  </ul>
</li>